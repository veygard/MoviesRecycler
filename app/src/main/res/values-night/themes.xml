<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoviesRecycler" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#B39DDB</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">#757272</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#4DB6AC</item>
        <item name="colorSecondaryVariant">#81C784</item>
        <item name="colorOnSecondary">#4E4C4C</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  Старый вариант сплеш-скрина -->
    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_night</item>
        <item name="android:statusBarColor">@color/background_night</item>
    </style>

</resources>